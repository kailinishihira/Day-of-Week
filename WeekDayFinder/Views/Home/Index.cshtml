@{
  Layout = "_Layout";
}
<h1>Day of the Week Finder</h1>

<h2>Enter a date to find the day of the week:</h2>

<form action="/dayofweek/find" method="post">
  <label for="year">Year: </label>
  <input type="number" id="year" name="year" class="form-control">
  <label for="month">Month: </label>
  <input type="number" id="month" name="month" class="form-control">
  <label for="day">Day: </label>
  <input type="number" id="day" name="day" class="form-control">
  <button type="submit" class="btn btn-default">Find Day</button>
</form>
